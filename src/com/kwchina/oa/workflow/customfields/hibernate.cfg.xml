<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration

PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"

"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="cglib.use_reflection_optimizer">true</property>
		<property name="hibernate.connection.driver_class">net.sourceforge.jtds.jdbc.Driver</property>
		<!--<property name="hibernate.connection.url">jdbc:jtds:sqlserver://192.168.61.10:1433</property>-->
		<!--<property name="hibernate.connection.url">jdbc:jtds:sqlserver://192.168.61.141:1433</property>-->
		<property name="hibernate.connection.url">jdbc:jtds:sqlserver://localhost:1433</property>
		<property name="hibernate.connection.username">htOA</property>
		<!--<property name="hibernate.connection.username">htTest</property>-->
		<property name="hibernate.connection.password">123456</property>
		<property name="hibernate.c3p0.max_size">50</property>
		<property name="hibernate.c3p0.min_size">0</property>
		<property name="hibernate.c3p0.timeout">120</property>
		<property name="hibernate.c3p0.max_statements">100</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.acquire_increment">2</property>
		<property name="hibernate.jdbc.batch_size">20</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
	</session-factory>
</hibernate-configuration>
